{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://dwp.gov.uk/exchange/publishing-tools/plugins/request-transformer/request-transformer-actions-schema.json",
  "description": "Plugin to modify the request before forwarding to the backend",
  "type": "object",
  "anyOf": [
    {
      "required": [
        "add"
      ]
    },
    {
      "required": [
        "append"
      ]
    },
    {
      "required": [
        "remove"
      ]
    },
    {
      "required": [
        "rename"
      ]
    }
  ],
  "properties": {
    "add": {
      "type": "array",
      "minLength": 1,
      "items": [
        {
          "type": "object"
        }
      ]
    },
    "append": {
      "type": "array",
      "minLength": 1,
      "items": [
        {
          "type": "object"
        }
      ]
    },
    "remove": {
      "type": "array",
      "minLength": 1,
      "items": [
        {
          "type": "object"
        }
      ]
    },
    "rename": {
      "type": "array",
      "minLength": 1,
      "items": [
        {
          "type": "object"
        }
      ]
    },
    "replace": {
      "type": "array",
      "minLength": 1,
      "items": [
        {
          "type": "object"
        }
      ]
    }
  }
}
