{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "https://dwp.gov.uk/exchange/publishing-tools/plugins/oidc/oidc_apigw-plugin-schema.json",
  "type": "object",
  "title": "OIDC API Gateway plugin",
  "properties": {
    "discovery_endpoint": {
      "type": "string",
      "format": "uri",
      "pattern": "^(http|https)://[^ \"]+$",
      "description": "The discovery endpoint on DTH or Azure AD"
    },
    "client_id": {
      "type": "string",
      "minLength": 2,
      "pattern": "^{vault:\/\/env\/[\\w|-]+\/?[\\w|-]+}$",
      "description": "Reference to the client id env var in the gateway, refer to gateway module for details"
    },
    "scopes_required": {
      "title": "Scopes required",
      "type": "array",
      "description": "The scopes required to be present in the access token",
      "items": [
        {
          "type": "string",
          "minLength": 2
        }
      ]
    },
    "issuers_allowed": {
      "title": "Issuers allowed",
      "type": "array",
      "description": "The issuers allowed to be present in the tokens",
      "items": [
        {
          "type": "string",
          "minLength": 2
        }
      ]
    },
    "cache_ttl": {
      "type": "integer",
      "default": 3600,
      "minimum": 1000,
      "description": "Time is expressed in milliseconds"
    },
    "cache_introspection": {
      "type": "boolean",
      "default": false
    },
    "display_errors": {
      "type": "boolean",
      "default": false
    },
    "ssl_verify": {
      "type": "boolean",
      "default": true
    },
    "timeout": {
      "type": "integer",
      "default": 10000,
      "minimum": 1000,
      "description": "Time is expressed in milliseconds"
    },
    "client_secret": {
      "type": "string",
      "description": "Reference to the client secret env var in the gateway, refer to gateway module for details",
      "minLength": 3,
      "pattern": "^{vault:\/\/env\/[\\w|-]+\/?[\\w|-]+}$"
    }
  },
  "additionalProperties": false,
  "required": [
    "discovery_endpoint",
    "scopes_required",
    "issuers_allowed"
  ]
}
